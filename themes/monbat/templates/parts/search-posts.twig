{% if posts|length > 0 %}
<h2>{{ __('Search results', 'monbat') }}</h2>
<ol class="search-results">
    {% for post in posts %}
      <li class="search-result">

        <div class="post__content-wrapper">

          <h3 class="post__title"><a href="{{ post.link }}">{{ post.post_title }}</a></h3>

          <p>
            {{ post.preview.length(59) }}
          </p>

          <p>
            <span class="post__date">{{ post.date("m/d/y - g:i") }}</span>
          </p>

        </div>

      </li>

    {% endfor %}
  </ol>
  <div class="data-handler" data-max-pages="{{ max_pages }}" data-current-page="{{ current_page }}"></div>
{% else %}
  <h2 data-aos="fade-up" class="post-not-found">
    {{ __('Posts not found', 'skeleton_theme') }}
  </h2>
{% endif %}

